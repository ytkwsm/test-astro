---
import config from '../../settings/config.json';

const { pageTitle }   = Astro.props;
const { pageDesc }    = Astro.props;
const title   = pageTitle ? pageTitle + " | " + config.site.name : config.site.name
const desc    = pageDesc ? pageDesc : config.site.desc
const color   = config.site.color;
---
<meta charset="UTF-8" />
<meta name="description" content={desc}>
<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />
<meta name="theme-color" content={color}>
<title>{title}</title>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+JP:wght@500;700&family=Inter:wght@500;700&family=Zen+Kaku+Gothic+New:wght@500;700&display=swap" rel="stylesheet">